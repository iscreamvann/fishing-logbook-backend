model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  password      String
  profile       Profile?
  fish          Fish[]
}

model Profile {
  id             Int     @id @default(autoincrement())
  userId         Int     @unique
  user           User    @relation(fields: [userId], references: [id])
  firstName      String?
  lastName       String?
  username       String?
}


model Fish {
  id        Int       @id @default(autoincrement())
  name      String
  breed     String
  weight    Float
  location  String
  catchBait String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
